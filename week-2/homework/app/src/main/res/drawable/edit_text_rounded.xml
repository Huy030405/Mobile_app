<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- trạng thái focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />                <!-- nền trắng -->
            <stroke android:width="2dp" android:color="#2196F3" /> <!-- viền xanh khi focus -->
            <corners android:radius="12dp" />               <!-- bo góc -->
            <padding android:left="12dp" android:top="10dp"
                android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>

    <!-- trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />                <!-- nền trắng -->
            <stroke android:width="1dp" android:color="#D0D0D0" /> <!-- viền xám -->
            <corners android:radius="12dp" />               <!-- bo góc -->
            <padding android:left="12dp" android:top="10dp"
                android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>

</selector>
